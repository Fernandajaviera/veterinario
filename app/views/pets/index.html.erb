<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Race</th>
      <th>Birthdate</th>
      <th>Visitas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.race %></td>
        <td><%= pet.birthdate %></td>
        <td><%= pet.history_count %></td>
        <td><%= link_to 'History', cliente_pet_pet_histories_path(@cliente, pet) %></td>
        <td><%= link_to 'Show', cliente_pet_path(@cliente, pet) %></td>
        <td><%= link_to 'Edit', edit_cliente_pet_path(@cliente, pet) %></td>
        <td><%= link_to 'Destroy', cliente_pet_path(@cliente, pet), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

